<ul class="flex justify-center items-center flex-col">
  <h1 class="text-center font-bold text-rose-400 my-16">{{ collections.frontpage.title }}</h1>
  {% for product in collections.frontpage.products %}
     <a href="{{ product.url }}">
    <li class="mb-16">
        <img
          class="text-center"
          src="{{ product.featured_image | image_url }}"
          alt="{{ product.title }}"
          width="200"
          height="200"
        >
        <h1 class=" text-red-600 text-2xl">{{ product.title | link_to: product.url }}</h1>
        <h4 class="w-96">{{ product.description }}</h4>
        <h1>{{ product.price | money }}</h1>
      
    </li>
    </a>
  {% endfor %}
</ul>
